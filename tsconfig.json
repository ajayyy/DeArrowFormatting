{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "outDir": "./lib",
        "noEmitOnError": false,
        "typeRoots": [ "./node_modules/@types" ],
        "paths": {
            "react": [ "./node_modules/@types/react" ]
        },
        "resolveJsonModule": true,
        "jsx": "react",
        "declaration": true,
        "lib": [
            "es2019",
            "dom",
            "dom.iterable"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "../node_modules/*",
    ]
}